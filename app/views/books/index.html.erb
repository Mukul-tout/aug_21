<p id="notice"><%= notice %></p>
<%= render "modal" %>

<h1>Books</h1>
<%= link_to "Download CSV", books_path(format: :csv)%>

<table border="3" id="book_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr id="book_<%= book.id %>">
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book), remote: true %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Book', new_book_path %>
